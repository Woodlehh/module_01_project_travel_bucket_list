<h1>Cities</h1>

<ul>
  <% for city in @cities %>
  <a href="/cities/<%=city.id%>"><h3> <%= city.name %> </h3></a>
  <% end %>
</ul>

<form action="/cities/new"><input type="submit" value="Add a City"></form>

<form action="/cities/delete-all-warning" method="GET"><input type="submit" value="Delete All Cities"></form>
