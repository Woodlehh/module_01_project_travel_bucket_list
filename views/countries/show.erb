<h1>Country: <%= @country.name %></h1>

<h2><%= @country.name %>'s cities:</h2>
  <% for city in @cities %>
  <% if city.country.name == @country.name %>
  <h3><a href="/cities/<%=city.id%>"><%= city.name %></a></h3><%= city.visit_status %>
  <% end %>
  <% end %>

<form action="/cities/new"><button class="button" type="submit"><span>Add A City</span></button></form>

<form action="/countries/<%=@country.id%>/edit"><button class="button" type="submit"><span>Change Details or Delete</span></button></form>
