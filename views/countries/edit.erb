<h2>Edit <%= @country.name %></h2>
<form action="/countries/<%= @country.id %>" method="POST">
      <label for="name">Country Name:</label>
      <input type="text" name="name" id="country_name" value="<%= @country.name %>"/>
      <input type="submit" value="Confirm Edit"/>
</form>

<form action="/countries/<%= @country.id %>/delete" method="POST"><input type="submit" value="Delete"></form>
